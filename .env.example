# Environment variables for DevTools App

# Server configuration
PORT=3001
NODE_ENV=development

# Backend connection
BACKEND_URL=http://localhost:3000
BACKEND_API_KEY=devtools-secret-key

# Logging configuration
LOG_LEVEL=debug
MAX_LOGS=1000
LOG_RETENTION_DAYS=7

# Storage configuration
STORAGE_TYPE=memory
STORAGE_FILE_PATH=./data/logs.json

# DevTools specific
DEVTOOLS_URL=http://localhost:3001
ENABLE_DEVTOOLS_LOGGING=true
